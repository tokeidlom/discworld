<form class="discworld-actor">
  <div class="form-group split-row">
    <div class="field-group name-field">
      <label for="name">Name:</label>
      <input type="text" name="name" value="{{actor.name}}" class="name-input">
    </div>
    
    <div class="field-group pronouns-field">
      <label for="pronouns">Pronouns:</label>
      <input type="text" name="system.pronouns" value="{{actor.system.pronouns}}" class="pronouns-input">
    </div>
  </div>

  <div class="form-group split-row">
    <div class="dice-roll-container">
      <label for="dice-rolls">Outcome Dice :</label>
      <div class="dice-roll-buttons">
        <button type="button" class="roll-button" data-dice="d4">Roll d4</button>
        <button type="button" class="roll-button" data-dice="d6">Roll d6</button>
        <button type="button" class="roll-button" data-dice="d8">Roll d8</button>
        <button type="button" class="roll-button" data-dice="d10">Roll d10</button>
        <button type="button" class="roll-button" data-dice="d12">Roll d12</button>
      </div>
    </div>

    <div class="field-group luck-field">
      <label for="luck">Luck:</label>
      <input type="number" name="system.luck" value="{{actor.system.luck}}" min="0" max="4" class="luck-input">
    </div>
    <label for="luck" class="luck-max">/4</label>
  </div>

  <div class="form-group split-row">
    <div class="field-group organisation-field">
      <label for="organisation">Organisation:</label>
      <input type="text" name="system.organisation" value="{{actor.system.organisation}}">
    </div>

    <div class="field-group background-field">
      <label for="background">Background:</label>
      <input type="text" name="system.background" value="{{actor.system.background}}">
    </div>
  </div>

  <div class="form-group split-row">
    <div class="left-column">
      <label for="niche">Niche:</label>
      <a class="control create" title="Create item" data-type="niche">
        <i class="fas fa-plus"></i>
      </a>
      {{#each items as |item id|}}
        {{#if (eq item.type "niche")}}
          <li class="row entry" data-item-id="{{item._id}}" data-item-type="{{item.type}}" data-item-value="{{item.name}}">
            <h4 class="one-column-no-roll list-entry">{{item.name}}</h4>
            <div class="control">
              <a class="edit" title="Edit Item"><i class="fas fa-edit"></i></a>
              <a class="delete" title="Delete Item"><i class="fas fa-trash"></i></a>
            </div>
          </li>
        {{/if}}
      {{/each}}

      <label for="core">Core:</label>
      <a class="control create" title="Create item" data-type="core">
        <i class="fas fa-plus"></i>
      </a>
      {{#each items as |item id|}}
        {{#if (eq item.type "core")}}
          <li class="row entry" data-item-id="{{item._id}}" data-item-type="{{item.type}}" data-item-value="{{item.name}}">
            <h4 class="one-column-no-roll list-entry">{{item.name}}</h4>
            <div class="control">
              <a class="edit" title="Edit Item"><i class="fas fa-edit"></i></a>
              <a class="delete" title="Delete Item"><i class="fas fa-trash"></i></a>
            </div>
          </li>
        {{/if}}
      {{/each}}

      <label for="quirks">Quirks:</label>
      <a class="control create" title="Create item" data-type="quirk">
        <i class="fas fa-plus"></i>
      </a>
      {{#each items as |item id|}}
        {{#if (eq item.type "quirk")}}
          <li class="row entry" data-item-id="{{item._id}}" data-item-type="{{item.type}}" data-item-value="{{item.name}}">
            <h4 class="one-column-no-roll list-entry">{{item.name}}</h4>
            <div class="control">
              <a class="edit" title="Edit Item"><i class="fas fa-edit"></i></a>
              <a class="delete" title="Delete Item"><i class="fas fa-trash"></i></a>
            </div>
          </li>
        {{/if}}
      {{/each}}

      <div class="form-group-notes">
        <label for="description">Description:</label>
        <textarea name="system.description">{{actor.system.description}}</textarea>
      </div>
    </div>

    <div class="right-column">
      <div class="form-group image-field">
        <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}"/>
      </div>
    </div>
  </div>

  <div class="form-group split-row">
    <div class="form-group-notes">
      <label for="consequences">Consequences:</label>
      <textarea name="system.consequences">{{actor.system.consequences}}</textarea>
    </div>

    <div class="form-group-notes">
      <label for="notes">Notes:</label>
      <textarea name="system.notes">{{actor.system.notes}}</textarea>
    </div>
  </div>
</form>
